<% layout('/layout/boilerplate') -%>
    <div class='row justify-content-center'>
        <div class="col-8">
            <div class="alert alert-warning" role="alert">
                <h4 class="alert-heading">
                    <%= err.statusCode %>
                </h4>
                <p>
                    <%= err.message %>
                </p>
                <hr>
                <%  if (process.env.NODE_ENV !== 'production') { %>
                    <p class="mb-0">
                        <%= err.stack %>
                    </p>
                    <% } %>
            </div>
        </div>
    </div>